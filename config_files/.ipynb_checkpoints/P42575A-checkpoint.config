# Config file for P42575A. changed pc_radius, depletion voltage
# all lengths are in mm
# format is <key_word> <value> # comment, with key_word starting at beginning of line

# general
#verbosity_level tells you how much information is being provided. More information is printed out at higher settings
verbosity_level 0        #  0 = terse, 1 = normal, 2 = chatty/verbose

# detector geometry
xtal_length       50.84 	# z length
xtal_radius 		34.7  	# radius
top_bullet_radius    	1.2   	# bulletization radius at top of crystal
bottom_bullet_radius 	0     	# bulletization radius at bottom of BEGe crystal
pc_length          	1.36  	# point contact length
pc_radius          	2.39  	# point contact radius
bulletize_PC         	0     	# point contact hemispherical rather than cylindrical
taper_length       	4.5   	# size of 45-degree taper at bottom of ORTEC-type crystal
wrap_around_radius 	0     	# wrap-around radius for BEGes. Set to zero for ORTEC
ditch_depth        	0     	# depth of ditch next to wrap-around for BEGes. Set to zero for ORTEC
ditch_thickness    	0     	# width of ditch next to wrap-around for BEGes. Set to zero for ORTEC

Li_thickness       	1.0   	# depth of full-charge-collection boundary for Li contact


# configuration for mjd_fieldgen (calculates electric fields & weighing potentials)

xtal_grid        	0.02  	# grid size in mm for field files (usually 0.5 or 0.1 mm)
impurity_z0      	-0.7    # net impurity concentration at Z=0, in 1e10 e/cm3
impurity_gradient 	0.053 	# net impurity gardient, in 1e10 e/cm4 (-0.7-(-0.971)/5.084)
impurity_surface  	0	# surface impurity of passivation layer, in 1e10 e/cm2
xtal_HV           	2300    # detector bias for fieldgen, in Volts

# options for mjd_fieldgen:
max_iterations    	50000   # maximum number of iterations to use in mjd_fieldgen
write_field       	1       # 0/1: do_not/do write the standard field output file
write_WP          	0      # 0/1: do_not/do calculate the weighting potential and write it to the file

# file names
detector_name P42575A # name of the detector
drift_name /nas/longleaf/home/kbhimani/siggen_ccd/drift_vel_tcorr.tab  # drift velocity lookup table
field_name /work/users/k/b/kbhimani/siggen_ccd_data/fields/ev_p1_sm1.dat # potential/efield file name; no included spaces allowed
wp_name    /work/users/k/b/kbhimani/siggen_ccd_data/wp     # directory to save the weighting potential to
home_dir   /nas/longleaf/home/kbhimani/siggen_ccd # directory to save the signal
scratch_dir  /work/users/k/b/kbhimani/siggen_ccd_data # directory to save the density snapshots

# configuration for signal calculation 
xtal_temp         90     # crystal temperature in Kelvin
preamp_tau        0     # integration time constant for preamplifier, in ns
time_steps_calc   20000   # number of time steps used in calculations
step_time_calc    0.2    # length of time step used for calculation, in ns
step_time_out     10.0   # length of time step for output signal, in ns
surface_drift_vel_factor 0.01  # surface drift is 100 times slower than bulk
energy 5000.00 # Interaction energy in KeV
passivated_thickness 0.0020 # thickness of passivation in mm, default is 2 micron, values must be smaller than grid

# signal will be saved in home_dir/waveforms/<detector_name>/